{
  "compilerOptions": {
    "target": "es2022",
    "module": "node16",
    "lib": ["es2020", "DOM"],
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "*": ["typings/*"]
    },
    "esModuleInterop": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "noEmit": true,

    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "tests/src/**/*",
    "tests/utils/**/*",
    "tools/**/*",
    "docs/.vitepress/**/*",
    "typings/**/*",
    "tsup.config.ts"
  ],
  "exclude": [
    "tests/fixtures/**/*",
    "lib/**/*",
    "docs/.vitepress/cache/**/*",
    "docs/.vitepress/dist/**/*"
  ]
}
